@model CarrosMonitoria.Models.CadastrarCarro

<head>
    <link rel="stylesheet" href="~/css/editarCarro.css">
</head>


<header>
    <nav class="navbar navbar-light">
        <a asp-action="Index">Home</a>
        <a asp-action="Carros">Carros</a>
        <a asp-action="Cadastro">Cadastro</a>
        <a asp-action="Contato">Contato</a>
        <a asp-action="Compras">Compras</a>
    </nav>
</header>

<main class="container">
    <h2 class="text-center my-4">Editar Carro</h2>
    <div class="divCarro text-center">
        <form action="" method="post">
            <div class="row">
                <div class="col-12 col-sm">
                    <form action="" method="post">
                        <div class="form-group">
                            <label>Id</label>
                            <input asp-for="Id_Carro" type="number" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Nome do Carro</label>
                            <input asp-for="Nome_Carro" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Preço</label>
                            <input asp-for="Preco" type="number" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Ano</label>
                            <input asp-for="Ano" type="number" class="form-control" required>
                        </div>
                        <button type="submit" class="btnAtualizar">Atualizar</button>
                    </form>
                </div>
            </div>
        </form>
    </div>
</main>